{
    "name": "redovisa",
    "version": "2.0.0",
    "private": true,
    "scripts": {
        "start": "node ./bin/www",
        "start-client": "cd client && npm start",
        "start-backend-dev": "LOCAL_DEV_PORT=7000 nodemon ./bin/www",
        "start-dev":
            "concurrently --kill-others --raw \"npm run start-backend-dev\" \"npm run start-client\"",
        "install-client": "cd client && npm install",
        "build-client": "cd client && npm run build",
        "stylelint-fix": "stylelint **/*.css --fix",
        "coverage": "jest --coverage",
        "test-client": "cd client && CI=true npm test",
        "test": "jest && npm run test-client",
        "stylelint": "stylelint **/*.css; exit 0",
        "eslint": "eslint .; exit 0",
        "posttest": "npm run eslint; npm run stylelint",
        "postinstall": "npm run install-client && npm run build-client",
        "heroku-postbuild":
            "cd client && npm install --only=dev && npm install && npm run build"
    },
    "dependencies": {
        "body-parser": "~1.18.2",
        "debug": "~2.6.9",
        "express": "~4.15.5",
        "fluture": "^7.2.1",
        "morgan": "~1.9.0",
        "ramda": "^0.25.0"
    },
    "devDependencies": {
        "concurrently": "^3.5.0",
        "eslint": "^4.6.1",
        "eslint-plugin-react": "^7.4.0",
        "jest": "^21.2.1",
        "stylelint": "^8.2.0",
        "supertest": "^3.0.0"
    },
    "jest": {
        "testEnvironment": "node",
        "modulePathIgnorePatterns": ["<rootDir>/client/"]
    }
}
